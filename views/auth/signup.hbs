<div class="form-container">
  <div class='window'>
    <div class='overlay'></div>
    <form class='content' action="/auth/signup" method="POST">
      <div class='welcome'>EVENTITY</div>
      <div class='subtitle'>We're almost done. Before using our even app you need to create an account.</div>
      <div class='input-fields'>
        <input type='text' placeholder='Username' name="username" class='input-line full-width'></input>
        <input type='email' placeholder='Email' class='input-line full-width'></input>
        <input type='password' placeholder='Password' name="password" class='input-line full-width'></input>
      </div>
      <div class='spacing'>or continue with <a class='highlight' href="/auth/login">Login</a></div>
      <div><button class='ghost-round full-width'>Sign up</button></div>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      <p class="account-message">
      </p>
    </form>
  </div>  
</div>